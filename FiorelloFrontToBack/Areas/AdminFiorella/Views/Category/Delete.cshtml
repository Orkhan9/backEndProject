@model Category
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="card-body">
        <blockquote class="blockquote blockquote-primary">
            <div class="blockquote-danger mb-3">@Model.Name</div>
            <p>@Html.Raw(Model.Description)</p>

        </blockquote>
    </div>
</div>
<div class="row mt-3 ml-3">
    <form  method="post">
        <button class="btn btn-danger mr-3" type="submit">Delete</button>
    </form>
    <a class="btn btn-warning" asp-action="Index">Cancel</a>
</div>

