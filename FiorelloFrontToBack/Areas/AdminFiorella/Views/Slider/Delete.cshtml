@model SliderImage
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <img src="~/img/@Model.Image" width="400px" height="200px" />
</div>
<div class="row mt-3">@Model.Image</div>
<div class="row mt-3">
    <a asp-action="Index" class="btn btn-dark">Go back</a>
    <form method="post">
        <button type="submit" class="btn btn-danger ml-2">Delete</button>
    </form>
</div>

